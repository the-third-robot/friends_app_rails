
<div class="jumbotron bg-secondary-subtle p-4">
  <h1 class="display-4">
    <%= "#{@friend.first_name} #{@friend.last_name}" %>
  </h1>
  <p class="lead"><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>
  <br />
  <div class = "d-flex flex-row">
    <%= link_to "Back", friends_path, class: "btn btn-dark" %>
    <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-dark ms-2" %>
    <%= button_to "Delete", @friend, method: :delete, class: "btn btn-danger ms-2" %>
  </div>
</div>


