<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div>
      <%= form.label :first_name, style: "display: block" %>
      <%= form.text_field :first_name, class: "form-control", placeholder: "ex: James"  %>
    </div>

    <div>
      <%= form.label :last_name, style: "display: block" %>
      <%= form.text_field :last_name, class: "form-control" , placeholder: "Nolan" %>
    </div>

    <div>
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email , class: "form-control", placeholder: "ex: james@exapmle.com" %>
    </div>

    <div>
      <%= form.label :phone, style: "display: block" %>
      <%= form.text_field :phone , class: "form-control", placeholder: "ex: +1 123 456 789" %>
    </div>

    <div>
      <%= form.label :twitter, style: "display: block" %>
      <%= form.text_field :twitter , class: "form-control", placeholder: "ex: @james" %>
    </div>

    <div>
      <%# Sending a default user id value in the backend: ensure you've added this field in the params to send in the db %>
      <%= form.number_field :user_id, id: :friend_user_id, class: "form-control", value: current_user.id, type: :hidden %>
    </div>

    <div>
      <%= form.submit  class:"btn btn-secondary mt-2" %>
    </div>
  </div>


<% end %>
